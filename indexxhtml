        // Fonction pour afficher/cacher le texte
        function toggleText(id, btn) {
            const moreText = document.getElementById(id);
            const currentLang = document.getElementById('languageSelect').value;
            
            if (moreText.style.display === "inline") {
                moreText.style.display = "none";
                btn.textContent = translations[currentLang].readMore;
            } else {
                moreText.style.display = "inline";
                btn.textContent = translations[currentLang].readLess;
            }
        }

        function changeLanguage() {
            const lang = document.getElementById('languageSelect').value;
            const elements = document.querySelectorAll('[data-i18n]');
            
            if (lang === 'ar') {
                document.documentElement.setAttribute('dir', 'rtl');
            } else {
                document.documentElement.setAttribute('dir', 'ltr');
            }

            // Met à jour tous les textes statiques
            elements.forEach(el => {
                const key = el.getAttribute('data-i18n');
                // Si c'est un bouton "Lire plus", on vérifie s'il est ouvert ou fermé pour mettre le bon texte
                if(el.classList.contains('read-more-btn')) {
                    const contentId = el.getAttribute('onclick').match(/'([^']+)'/)[1];
                    const contentDiv = document.getElementById(contentId);
                    if(contentDiv.style.display === "inline") {
                        el.textContent = translations[lang].readLess;
                    } else {
                        el.textContent = translations[lang].readMore;
                    }
                } else if (translations[lang] && translations[lang][key]) {
                    el.textContent = translations[lang][key];
                }
            });
        }
    </script>
